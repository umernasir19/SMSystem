                        <th>Actions(s)</th>
                    </tr>
                </thead>
                <tbody></tbody>
                <tfoot align="right">
                    <tr><th></th><th></th><th></th></tr>
                </tfoot>
            </table>*@
</div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->

<!-- ./wrapper -->
@section MyScripts{
    <script type="text/javascript">
        var dataTable;
        var searchdata;
        $(document).ready(function () {
         
        });
        
        //search buttton
        $('#searchpayments').click(function (e) {
            e.preventDefault();
            var form = $("#formadddemptype");
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $("#loadergif").show();
                $.ajax({
                    type: "POST",
                    url: "/Reports/GetDailyReport",
                    data: $(form).serialize(),
                    //cache : false,
                    //processData: false,
                    success: function (res) {
                        binDataTable(res);
                    },
                    failure: function (res) {
                        console.log(res);
                    },
                    err: function (res) {
                        console.log(res);
                    }

                })
            }
            else {
                return false;
            }



        });
        function binDataTable(res) {
            //console.log(res.data)
            //if ($.fn.DataTable.isDataTable('#example2')) {
            //    $('#example2').dataTable().fnClearTable();
            //    $('#example2').dataTable().fnDestroy();
            //    $('#example2 tbody').empty();
            //}
            var data = res.data;// JSON.parse(res.data);
            var columnNames;
            //console.log(data);
            var columns = [];
            if (data.length > 0) {
                if ($.fn.DataTable.isDataTable('#example2')) {
                    $('#example2').dataTable().fnClearTable();
                    $('#example2').dataTable().fnDestroy();
                    $('#example2 tbody').empty();
                }
                columnNames = Object.keys(data[0]);
            }
            else {
                alert("No Data Found");
                //$("#loadergif").hide();
                // columnNames = ["No Value Found", "No Data Found"];
            }
            console.log(columnNames[3].replace(/_/g, " "));
            for (var i in columnNames) {
                columns.push({
                    data: columnNames[i],
                    title: capitalizeFirstLetter(columnNames[i])
                });
            }
            table = $('#example2').DataTable(

                {

                    "sScrollX": "200%", //This is what made my columns increase in size.
                    "bScrollCollapse": true,
                    "sScrollY": "520px",

                    dom: 'Bfrtip',
                    buttons: [

                    {
                        extend: 'excel',
                        title: 'Query Report',
                        filename: 'Query Report'
                    }, {
                        extend: 'csv',
                        filename: 'Query Report'
                    }],

                    data: data,
                    columns: columns,
                    bSort: false,
                });
            //console.log(keys);
            $("#loadergif").hide();
        }

        function capitalizeFirstLetter(string) {
            return string.charAt(0).toUpperCase() + string.slice(1);
        }


    </script>
}